<security>
  <version>2.0.2</version>
  <roles>
    <role>
      <id>maven-site-all-read</id>
      <name>Repo: All Maven Site Repositories (Read)</name>
      <description>Gives access to read ALL content of ALL Maven Site Repositories in Nexus.</description>
      <sessionTimeout>60</sessionTimeout>
      <privileges>
        <privilege>maven-site-read</privilege>
        <privilege>repository-all</privilege>
      </privileges>
    </role>
    <role>
      <id>maven-site-all-full</id>
      <name>Repo: All Maven Site Repositories (Full Control)</name>
      <description>Gives access to create/read/update/delete ALL content of ALL Maven Site Repositories in Nexus.</description>
      <sessionTimeout>60</sessionTimeout>
      <privileges>
        <privilege>maven-site-create</privilege>
        <privilege>maven-site-read</privilege>
        <privilege>maven-site-update</privilege>
        <privilege>maven-site-delete</privilege>
        <privilege>repository-all</privilege>
      </privileges>
    </role>
  </roles>
  <privileges>
    <privilege>
      <id>maven-site-create</id>
      <name>All Maven Site Repositories - (create)</name>
      <description>Give permission to create any content in any Maven Site repository.</description>
      <type>target</type>
      <properties>
        <property>
          <key>method</key>
          <value>create,read</value>
        </property>
        <property>
          <key>repositoryTargetId</key>
          <value>maven-site</value>
        </property>
        <property>
          <key>repositoryId</key>
          <value></value>
        </property>
        <property>
          <key>repositoryGroupId</key>
          <value></value>
        </property>
      </properties>
    </privilege>
    <privilege>
      <id>maven-site-read</id>
      <name>All Maven Site Repositories - (read)</name>
      <description>Give permission to read any content in any Maven Site Repository.</description>
      <type>target</type>
      <properties>
        <property>
          <key>method</key>
          <value>read</value>
        </property>
        <property>
          <key>repositoryTargetId</key>
          <value>maven-site</value>
        </property>
        <property>
          <key>repositoryId</key>
          <value></value>
        </property>
        <property>
          <key>repositoryGroupId</key>
          <value></value>
        </property>
      </properties>
    </privilege>
    <privilege>
      <id>maven-site-update</id>
      <name>All Maven Site Repositories - (update)</name>
      <description>Give permission to update any content in any Maven Site Repository.</description>
      <type>target</type>
      <properties>
        <property>
          <key>method</key>
          <value>update,read</value>
        </property>
        <property>
          <key>repositoryTargetId</key>
          <value>maven-site</value>
        </property>
        <property>
          <key>repositoryId</key>
          <value></value>
        </property>
        <property>
          <key>repositoryGroupId</key>
          <value></value>
        </property>
      </properties>
    </privilege>
    <privilege>
      <id>maven-site-delete</id>
      <name>All Maven Site Repositories - (delete)</name>
      <description>Give permission to delete any content in any Maven Site Repository.</description>
      <type>target</type>
      <properties>
        <property>
          <key>method</key>
          <value>delete,read</value>
        </property>
        <property>
          <key>repositoryTargetId</key>
          <value>maven-site</value>
        </property>
        <property>
          <key>repositoryId</key>
          <value></value>
        </property>
        <property>
          <key>repositoryGroupId</key>
          <value></value>
        </property>
      </properties>
    </privilege>
  </privileges>
</security>
