<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.sonatype.nexus.plugin</groupId>
    <artifactId>nexus-enterprise-plugins</artifactId>
    <version>1.4.0-SNAPSHOT</version>
  </parent>

  <artifactId>nexus-maven-site-plugin</artifactId>

  <packaging>nexus-plugin</packaging>

  <name>Nexus Enterprise Plugin :: Maven Site Plugin</name>
  <description>Nexus Maven Site Plugin (Extras).</description>

  <scm>
    <url>http://svn.sonatype.org/nexus-plugins/trunk/nexus-maven-site-plugin</url>
    <connection>scm:svn:http://svn.sonatype.org/nexus-plugins/trunk/nexus-maven-site-plugin</connection>
    <developerConnection>scm:svn:https://svn.sonatype.org/nexus-plugins/trunk/nexus-maven-site-plugin</developerConnection>
  </scm>

  <developers>
    <developer>
      <id>cstamas</id>
      <name>Tamas Cservenak</name>
      <email>cstamas@sonatype.com</email>
      <roles>
        <role>developer</role>
      </roles>
    </developer>
  </developers>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.sonatype.nexus</groupId>
        <artifactId>nexus-webapp-dependencies</artifactId>
        <version>${nexus.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-plugin-api</artifactId>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-rest-api</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-plugin-test-api</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sonatype.nexus.plugin</groupId>
      <artifactId>nexus-licensing-plugin</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.plexus</groupId>
        <artifactId>plexus-component-metadata</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>obfuscation</id>
      <activation>
        <property>
          <name>!skip-obfuscation</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>com.pyx4me</groupId>
            <artifactId>proguard-maven-plugin</artifactId>
            <executions>
              <execution>
                <phase>process-classes</phase>
                <goals>
                  <goal>proguard</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <injar>classes</injar>
              <options>
                <option>-keep public interface * { public *; }</option>
                <option>
                  <![CDATA[
                    -keep 
                    public class * extends java.lang.Exception 
                    {
                      public <methods>;
                      public <fields>;                                  
                    }
                  ]]>
                </option>
                <option>-keep public class * implements org.sonatype.nexus.scheduling.NexusTask { }</option>
                <option>-keep public class * implements org.sonatype.nexus.plugins.rest.NexusResourceBundle { }</option>
                <option>-dontusemixedcaseclassnames</option>
                <option>-keepattributes *Annotation*,Exceptions,InnerClasses,Signature</option>
                <option>-dontoptimize</option>
                <option>-dontshrink</option>
                <option>-repackageclasses 'codeguard.nexusmsiteplugin'</option>
                <option>-allowaccessmodification</option>
                <option>-useuniqueclassmembernames</option>
                <option>-obfuscationdictionary ${project.build.directory}/dictionary.txt</option>
                <option>-classobfuscationdictionary ${project.build.directory}/dictionary.txt</option>
              </options>
              <libs>
                <lib>${java-runtime}</lib>
              </libs>
              <exclusions>
                <exclusion>
                  <groupId>org.springframework</groupId>
                </exclusion>
              </exclusions>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>